<%= simple_form_for(doll, html: {class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :tag, as: :text, input_html: {rows: "1"} %>


  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
